a, b = map(int, input().split())  # 자연수의 개수와 상타는 인원 입력
x = input().split()               # 입력된 걸 나눠서 리스트에 저장함 ( 문자로 저장됨 )
z = []                            # 정수로 바꿀 리스트

for i in range(a):                # 정수로 변환
    z.append(int(x[i]))
    
z.sort(reverse=True)              # 리스트 내림차순 적용

print(z[b-1])                     
